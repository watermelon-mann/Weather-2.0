<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.watermelonman.weather.ui.fragment.home.view.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/lMainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorMainBlueBg"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Text.White.Cabin.22"
                    android:gravity="center"
                    tools:text="`City Name`"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgManageLocations"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:padding="@dimen/dp_4"
                    app:layout_constraintTop_toTopOf="@id/txtLocation"
                    app:layout_constraintBottom_toBottomOf="@id/txtLocation"
                    app:layout_constraintStart_toEndOf="@id/txtLocation"
                    app:srcCompat="@drawable/ic_edit_list"
                    app:tint="?colorLightSecondary"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/bg_rect_radius_6_white_20_with_ripple"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTimeMiddleDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txtTimeNowInXLocation"
                    app:layout_constraintTop_toBottomOf="@id/txtLocation"
                    app:layout_constraintEnd_toStartOf="@id/txtTimeNowInLocation"
                    style="@style/Text.White.Cabin.22"
                    android:text="@string/middle_dot"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    tools:text="·"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTimeNowInXLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txtTimeMiddleDot"
                    app:layout_constraintTop_toTopOf="@id/txtTimeMiddleDot"
                    app:layout_constraintBottom_toBottomOf="@id/txtTimeMiddleDot"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    style="@style/Text.White.Cabin.16"
                    tools:text="Now in `city name`"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTimeNowInLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txtTimeMiddleDot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txtTimeMiddleDot"
                    app:layout_constraintBottom_toBottomOf="@id/txtTimeMiddleDot"
                    style="@style/Text.White.Cabin.16"
                    tools:text="10:23"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTemperature"
                    app:layout_constraintTop_toBottomOf="@+id/txtTimeNowInXLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_12"
                    style="@style/Text.White.Metropolis.66"
                    tools:text="24" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDescription"
                    app:layout_constraintTop_toBottomOf="@+id/txtTemperature"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    style="@style/Text.White.Cabin.18"
                    tools:text="some description" />

                <androidx.appcompat.widget.AppCompatTextView
                    app:layout_constraintStart_toEndOf="@+id/txtTemperature"
                    app:layout_constraintTop_toTopOf="@+id/txtTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/degrees_celsius"
                    style="@style/Text.White.Metropolis.28"
                    android:layout_marginTop="@dimen/dp_8"
                    tools:text="℃"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtNext24Hours"
                    style="@style/Text.Metropolis.AllCaps"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/hourly"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_12" />

                <FrameLayout
                    android:id="@+id/lNext24HoursContainer"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtNext24Hours"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/RoundedStrokeBgContainer"
                    android:layout_marginTop="@dimen/dp_8">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvNext24Hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        tools:listitem="@layout/rv_item_hourly"
                        tools:itemCount="1" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtNext7Days"
                    style="@style/Text.Metropolis.AllCaps"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/lNext24HoursContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/daily"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_12" />

                <FrameLayout
                    android:id="@+id/lNext7DaysContainer"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtNext7Days"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/RoundedStrokeBgContainer">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvNext7Days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        tools:listitem="@layout/rv_item_daily"
                        tools:itemCount="1" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAdditionalInfo"
                    style="@style/Text.Metropolis.AllCaps"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/additional_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lNext7DaysContainer" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lAdditionalInfoContainer"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtAdditionalInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_16"
                    android:background="@drawable/bg_rect_radius_12_white_stroke">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtRealFeelLabel"
                        style="@style/Text.Metropolis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/real_feel" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtRealFeel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.White.Cabin.18"
                        app:layout_constraintTop_toBottomOf="@id/txtRealFeelLabel"
                        app:layout_constraintStart_toStartOf="@id/txtRealFeelLabel"
                        tools:text="21.2 ℃"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtPressureLabel"
                        style="@style/Text.Metropolis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txtRealFeel"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/pressure" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txtPressureLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/Text.White.Cabin.18"
                        tools:text="1012 hPa"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideMiddleAdditionalInfo"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtHumidityLabel"
                        style="@style/Text.Metropolis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/txtRealFeelLabel"
                        app:layout_constraintStart_toStartOf="@id/guideMiddleAdditionalInfo"
                        android:text="@string/humidity"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.White.Cabin.18"
                        app:layout_constraintTop_toBottomOf="@id/txtHumidityLabel"
                        app:layout_constraintStart_toStartOf="@id/guideMiddleAdditionalInfo"
                        tools:text="67%"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtWindLabel"
                        style="@style/Text.Metropolis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/txtPressureLabel"
                        app:layout_constraintStart_toStartOf="@id/guideMiddleAdditionalInfo"
                        android:text="@string/wind"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/txtWindLabel"
                        app:layout_constraintStart_toStartOf="@id/guideMiddleAdditionalInfo">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgWindDirection"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:tint="@color/white"
                            app:srcCompat="@drawable/ic_round_navigation_24"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Text.White.Cabin.18"
                            android:layout_marginStart="@dimen/dp_4"
                            tools:text="1.53 m/s"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/lDataStatusMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="?attr/colorMainBlueBg"
            tools:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/vLoading"
                android:layout_width="@dimen/dp_98"
                android:layout_height="@dimen/dp_98"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/loading_lottie"
                app:lottie_autoPlay="true"
                app:lottie_repeatMode="restart"
                app:lottie_loop="true"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lAnErrorOccurred"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/dp_48"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/clip_hardworking_man"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.White.Cabin.18"
                    android:gravity="center"
                    android:text="@string/unsuccessful_response_error_message"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </FrameLayout>
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
