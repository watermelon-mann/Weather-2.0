<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/color_sky_blue">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewSevenDayForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_seven_day_forecast"
        android:textAllCaps="false"
        android:fontFamily="@font/cabin"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        app:backgroundTint="?attr/colorPrimaryButtonBg"
        android:stateListAnimator="@null"
        app:rippleColor="?attr/colorPrimaryButtonRipple"/>

</FrameLayout>